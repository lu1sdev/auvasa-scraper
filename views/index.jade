extends layout

block content
	h1= title

	table
		tr
			td Linea
			td Dest
			td Tiempo
	
		for horario in horarios
			if horario.tiempo != 0
				tr
					td #{horario.linea}
					td #{horario.dest}
					td #{horario.tiempo}
			else
				tr.blink
					td #{horario.linea}
					td #{horario.dest}
					td #{horario.tiempo}
